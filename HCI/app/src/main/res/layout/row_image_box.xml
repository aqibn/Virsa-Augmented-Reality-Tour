<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android               = "http://schemas.android.com/apk/res/android"
    android:orientation         = "horizontal"
    android:layout_width        = "match_parent"
    android:layout_height       = "wrap_content"
    android:background          = "#FFFFDA90">

    <LinearLayout android:layout_width = "0dp" android:layout_height = "match_parent" android:layout_weight = "0.03"/>

    <FrameLayout xmlns:android      = "http://schemas.android.com/apk/res/android"
        android:id                  = "@+id/imagebox_frame_1"
        android:layout_width        = "0dp"
        android:layout_height       = "wrap_content"
        android:orientation         = "vertical"
        android:layout_weight       = "1">

        <ImageView
            android:id              = "@+id/imagebox_image_1"
            android:layout_width    = "match_parent"
            android:layout_height   = "match_parent"
            android:scaleType       = "centerCrop"
            />

        <TextView
            android:id              = "@+id/imagebox_text_1"
            android:layout_width    = "match_parent"
            android:layout_height   = "40dp"
            android:layout_gravity  = "center|bottom"
            android:gravity         = "center"
            android:background      = "#aaffffff"
            android:textColor       = "@android:color/black"
            />

        <TextView
            android:id              = "@+id/imagebox_label_1"
            android:layout_width    = "50dp"
            android:layout_height   = "25dp"
            android:layout_gravity  = "start|top"
            android:gravity         = "center"
            android:background      = "#aa000000"
            android:textColor       = "@android:color/white"
            />
    </FrameLayout>

    <LinearLayout android:layout_width = "0dp" android:layout_height = "match_parent" android:layout_weight = "0.05"/>

    <FrameLayout xmlns:android      = "http://schemas.android.com/apk/res/android"
        android:id                  = "@+id/imagebox_frame_2"
        android:layout_width        = "0dp"
        android:layout_height       = "wrap_content"
        android:orientation         = "vertical"
        android:layout_weight       = "1" >

        <ImageView
            android:id              = "@+id/imagebox_image_2"
            android:layout_width    = "match_parent"
            android:layout_height   = "match_parent"
            android:scaleType       = "centerCrop"
            />

        <TextView
            android:id              = "@+id/imagebox_text_2"
            android:layout_width    = "match_parent"
            android:layout_height   = "40dp"
            android:layout_gravity  = "center|bottom"
            android:gravity         = "center"
            android:background      = "#aaffffff"
            android:textColor       = "@android:color/black"
            />

        <TextView
            android:id              = "@+id/imagebox_label_2"
            android:layout_width    = "50dp"
            android:layout_height   = "25dp"
            android:layout_gravity  = "start|top"
            android:gravity         = "center"
            android:background      = "#aa000000"
            android:textColor       = "@android:color/white"
            />
    </FrameLayout>

    <LinearLayout android:layout_width = "0dp" android:layout_height = "match_parent" android:layout_weight = "0.03"/>
</LinearLayout>